###############################################################################
# Name of the project Synth
# File: Makefile
# Purpose: Makefile for the project Synth
# Author: Ahmad Almofeez
# Date: 04/02/2022
# Version: 0.1
###############################################################################

TARGET= COE597_Project

###############################################################################
# Building variables
###############################################################################
# debug build?
DEBUG = 0
# optimization
OPT = -Og

###############################################################################
# Compiler variables
###############################################################################
# compiler
CC = gcc
# compiler flags
CF = -Wall -Werror -ansi
# linker
LD = ld
# linker flags
LF = -lc -lm

###############################################################################
# paths
###############################################################################
# Build directory
BLD_DIR = build

###############################################################################
# Include directories
###############################################################################
INC = -I. -I./Inc

###############################################################################
# source
###############################################################################
# C source files
SRC_C = ./Src/main.c

###############################################################################
# object files
###############################################################################
OBJ = *.o

all: $(BLD_DIR)

%.o: %.c
	$(CC) -o $@ -c $< $(CF)

$(BLD_DIR):
	mkdir -p $(BLD_DIR)

clean:
	rm -rf $(BLD_DIR)

-include $(wildecard $(BLD_DIR)/*.d)

# **EOF**
